issn = {00033472},
journal = {Animal Behaviour},
keywords = {Brain size,Carnivore,Cognition,Hyaena,Intelligence,Problem solving,Social complexity,Zoo},
pages = {237--248},
title = {{Brains, brawn and sociality: A hyaena's tale}},
volume = {103},
