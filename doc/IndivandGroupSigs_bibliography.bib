journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {Cognitive evolution,Comparative cognition,Individual recognition,Social intelligence,Social knowledge,Vocalization},
number = {1696},
pages = {3045--3053},
title = {{Experimental evidence for limited vocal recognition in a wild primate: Implications for the social complexity hypothesis}},
volume = {277},
year = {2010}
}
